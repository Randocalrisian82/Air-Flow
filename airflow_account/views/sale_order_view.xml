<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_inherit_air_flow" model="ir.ui.view">
        <field name="name">sale.order.form.air.flow</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]//group[1]" position="inside">
                <field name="proj_manager_char"/>
                <field name="proj_name"/>
            </xpath>
            <xpath expr="//group[1]//group[2]" position="inside">
                <field name="ship_date"/>
                <field name="ship_method"/>
            </xpath>
        </field>
    </record>

    <!-- Sale channel view -->
    <record id="view_crm_team_form_inherit_air_flow" model="ir.ui.view">
        <field name="name">crm.team.form.air.flow</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='right']" position="inside">
                <field name="phone"/>
                <field name="email"/>
            </xpath>
        </field>
    </record>
</odoo>
