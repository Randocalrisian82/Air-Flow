<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_form_form_inherit_airflow" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.air.flow</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <data>
                <field name='cash_rounding_id' position="after">
                    <field name="early_discount_per" invisible="1"/>
                    <field name="ed_payment_due_date" invisible="1"/>
                    <field name="early_discount_amount" invisible="1"/>
                    <field name="available_discount" invisible="1"/>
                </field>
                <xpath expr="//group[1]//group[1]" position="inside">
                    <field name="proj_manager_char"/>
                    <field name="proj_name"/>
                </xpath>
                <xpath expr="//group[1]//group[2]" position="inside">
                    <field name="ship_date"/>
                    <field name="ship_method"/>
                </xpath>
                <field name="date_due" position="after">
                    <field name="paid_date" attrs="{'readonly': [('state', '!=', 'paid')]}"/>
                </field>
            </data>
        </field>
    </record>

    <record id="view_invoice_supplier_form_inherit_airflow" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form.inherit.air.flow</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//notebook" position="before">
                <group string='Early Discount' attrs="{'invisible': [('state', '!=', 'open')]}">
                    <field name="early_discount_per" readonly="1"/>
                    <field name="ed_payment_due_date"/>
                    <field name="early_discount_amount"/>
                    <field name="do_not_update_discount"/>
                    <field name="available_discount" attrs="{'readonly': [('do_not_update_discount', '=', False)]}"/>
                    <field name="available_discount_hidden" invisible="1"/>
                </group>
            </xpath>
            <xpath expr="//form//group[hasclass('oe_subtotal_footer')]//field[@name='residual']" position="after">
                <field name="actual_discount" readonly="1" attrs="{'invisible': [('state', '!=', 'paid')]}"/>
            </xpath>
            <field name="date_due" position="after">
                <field name="paid_date" attrs="{'readonly': [('state', '!=', 'paid')]}"/>
            </field>
        </field>
    </record>

